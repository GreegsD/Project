import time

def introduction():
    print("Ласкаво просимо на Острів Загадок!")
    print("Ви опинились на таємничому острові, де прихований величезний скарб.")
    print("Щоб знайти скарб, вам потрібно вирішити різні загадки і подолати перешкоди.")
    print("Готові розпочати свою подорож?")
    input("Натисніть Enter для продовження...")

def beach_location():
    print("\nВи опинилися на пляжі острова.")
    print("Перед вами старий сундук.")
    answer = input("Яка загадка на сундуку: 'Має ключ, а двері відкриває не він'?\n")
    if answer.lower() == "серце":
        print("Відповідь правильна! Ви відкрили сундук і знайшли карту до наступної локації.")
        return True
    else:
        print("Неправильна відповідь. Спробуйте ще раз.")
        return False

def jungle_location():
    print("\nВи потрапили в джунглі острова.")
    print("Перед вами величезний страшний лев.")
    answer = input("Що завжди йде за левом, але ніколи не доганяє?\n")
    if answer.lower() == "тінь":
        print("Відповідь правильна! Лев відступив і дозволив вам пройти.")
        return True
    else:
        print("Лев грозить вам. Спробуйте ще раз.")
        return False

def ruins_location():
    print("\nВи дісталися до руїн на острові.")
    print("Попереду вас стоять величезні ворота.")
    answer = input("Яка загадка на воротах: 'Великий, смугастий і їсть бамбук'?\n")
    if answer.lower() == "панда":
        print("Відповідь правильна! Ворота відкрилися, і ви наблизилися до скарбів.")
        return True
    else:
        print("Ворота залишаються закритими. Спробуйте ще раз.")
        return False

def main():
    introduction()

    if beach_location():
        if jungle_location():
            if ruins_location():
                print("\nВітаємо! Ви знайшли величезний скарб на Острівці Загадок!")

if __name__ == "__main__":
    main()
